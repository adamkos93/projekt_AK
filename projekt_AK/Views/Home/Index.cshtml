<div id="logowanie" class="modal fade" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header text-center">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h3>@Resource.Logowanie</h3>
            </div>
            <div class="modal-body  ">
        @if (!Request.IsAuthenticated)
        {
            using (@Html.BeginForm("Login", "Home", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post))
            {
                @Html.AntiForgeryToken()
     
                <div class="row">
                    <div class="form-group logowanie">
                        <div class="col-xs-12 col-sm-6 col-md-6 col-lg-6">
                            @Html.LabelFor(user => user.LoginViewModel.Email)
                        </div>
                        <div class="col-xs-12 col-sm-6 col-md-6 col-lg-6">
                            @Html.TextBoxFor(user => user.LoginViewModel.Email, new { @class = "form-control", @placeholder = "Email" })
                            <p class="text-danger"> @Html.ValidationMessageFor(user => user.LoginViewModel.Email)</p>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="form-group logowanie">
                        <div class="col-xs-12 col-sm-6 col-md-6 col-lg-6">
                            @Html.LabelFor(user => user.LoginViewModel.Password)
                        </div>
                        <div class="col-xs-12 col-sm-6 col-md-6 col-lg-6">
                            @Html.PasswordFor(user => user.LoginViewModel.Password, new { @class = "form-control", @placeholder = "Password" })
                            <p class="text-danger"> @Html.ValidationMessageFor(user => user.LoginViewModel.Password)</p>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-xs-12 col-sm-6 col-md-6 col-lg-6">
                        <p class="text-muted">@Html.LabelFor(m => m.LoginViewModel.RememberMe)</p>
                    </div>
                    <div class="col-xs-12 col-sm-6 col-md-6 col-lg-6">
                        @Html.CheckBoxFor(m => m.LoginViewModel.RememberMe, new { @checked = "checked", @class = "checkbox" })
                        <p class="text-danger">
                            @Html.ValidationMessageFor(o => o.LoginViewModel.RememberMe)
                        </p>
                    </div>
                </div>
            <div class="modal-footer">
                <div class="row">
                    <button type="submit" class="btn btn-success center-block">@Resource.Zaloguj</button>
                </div>
                <div class="row text-center">
                    <button type="button" class="btn btn-link center-block" data-dismiss="modal" data-target="#rejestracja" data-toggle="modal">@Resource.Zarejestruj</button>
                </div>
            </div>
            }
        }
        else
        {
            <p class="text-center">@Resource.Jestes_zalogowany</p>
        }
       </div>
    </div>
  </div>
</div>
